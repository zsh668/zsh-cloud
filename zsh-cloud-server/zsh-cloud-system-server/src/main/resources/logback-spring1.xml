<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <include resource="com/zsh/cloud/common/log/logback/zsh-cloud-defaults.xml"/>
    
    <springProfile name="test,docker,prod">
        <logger name="com.zsh.cloud.system.api" additivity="true" level="${log.level.controller}">
            <appender-ref ref="ASYNC_CONTROLLER_APPENDER"/>
        </logger>
        <logger name="com.zsh.cloud.system.application" additivity="true" level="${log.level.service}">
            <appender-ref ref="ASYNC_SERVICE_APPENDER"/>
        </logger>
        <logger name="com.zsh.cloud.system.infrastructure" additivity="false" level="${log.level.dao}">
            <appender-ref ref="ASYNC_DAO_APPENDER"/>
        </logger>
    </springProfile>
    
    <springProfile name="dev">
        <logger name="com.zsh.cloud.system.api" additivity="true" level="${log.level.controller}">
            <appender-ref ref="CONTROLLER_APPENDER"/>
        </logger>
        <logger name="com.zsh.cloud.system.application" additivity="true" level="${log.level.service}">
            <appender-ref ref="SERVICE_APPENDER"/>
        </logger>
    </springProfile>
</configuration>
